<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/prostokat" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pole prostokąta"
                android:textAlignment="center"
                android:textColor="#9C27B0"
                android:textSize="60sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pole_prostokata" />

            <EditText
                android:id="@+id/editTextNumber21"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:ems="10"
                android:hint="Podaj bok a"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber22"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:ems="10"
                android:hint="Podaj bok b"
                android:inputType="number" />

            <Button
                android:id="@+id/button22"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Oblicz pole"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Wynik"
                android:textAlignment="center"
                android:textColor="#4CAF50"
                android:textSize="60sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POWRÓT"
                android:textSize="34sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>